<%= simple_form_for @harvest, method: :post, url: finished_harvest_path do |f| %>
  <%= f.input :state, collection: [[Harvest.human_enum_name(:state, :cancelled), 'cancelled'], [Harvest.human_enum_name(:state, :ended), 'ended']] %>
  <%= f.input :total_collected %>
  <%= f.input :final_notes %>
  <%= f.button :submit, t('.finish') %>
<% end %>
